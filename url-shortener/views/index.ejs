<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link
			href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
			rel="stylesheet"
			integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD"
			crossorigin="anonymous"
		/>
		<title>URL Shortener</title>
	</head>
	<body>
		<div class="container">
			<h1>URL Shortener</h1>
			<form action="/shortUrls" method="post" class="my-4 form-inline">
				<label for="longUrl" class="sr-only">URL</label>
				<input
					required
					placeholder="Url"
					type="url"
					name="longUrl"
					id="longUrl"
					class="mr-2 col form-control"
				/>
				<button type="submit" class="btn btn-success">Shrink</button>
			</form>
			<table class="table table-striped table-responsive">
				<thead>
					<tr>
						<th>Full Url</th>
						<th>Short Url</th>
						<th>Clicks</th>
					</tr>
				</thead>
				<tbody>
					<% shortUrls.forEach(shortUrl => { %>
					<tr>
						<td>
							<a href="<%= shortUrl.longUrl %>"><%= shortUrl.longUrl %></a>
						</td>
						<td>
							<a href="<%= shortUrl.shortUrl %>"><%= shortUrl.shortUrl %></a>
						</td>
						<td><%= shortUrl.clicks %></td>
					</tr>
					<% }) %>
				</tbody>
			</table>
		</div>
	</body>
</html>
